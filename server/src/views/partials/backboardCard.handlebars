<div id="modal-button-details" class="card" style="width: 15rem; height: 15rem">
    <div class="card-header">
        <div class="badge">
            <span class="text-{{this.color}} bg-dark fw-bold h6">{{this.Doer.username}}</span>
        </div>
        <div class="tag-item">
            <i class="fas fa-clock mr-2"></i>
            <small class="p">{{{dateStandard this.createdAt}}}</small>
        </div>
    </div>

    <div class="card-body p-0 text-center p-2" style="cursor: pointer; max-height: 30%; overflow: hidden"
        data-bs-toggle="modal" data-bs-target="#backboardDetailsModal-{{this.id}}">
        <p>{{this.title}}</p>
    </div>
    <div class="card-footer p-2">
        <form class="d-flex justify-content-center" action="/{{this.id}}/state?_method=PUT" method="POST">
            <button class="btn-primary btn btn-sm p-1 mt-1" style="border: none;" type="submit">
                Move to Main Board
            </button>
        </form>
    </div>
</div>