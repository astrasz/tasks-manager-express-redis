<div class="backboard-content row d-flex mt-5 flex-wrap flex-row">
    {{!-- <div class="backboard-content__search w-100 d-flex justify-content-center mb-3"> --}}

        {{!-- </div> --}}
    <div class="backboard-content__panel col-12 bg-dark ps-2 pt-2 me-2 mt-2 mb-2" style="border-radius: 10px">
        {{> filters}}
    </div>

    <div class="backboard-content__tasks col-12 d-flex flex-row justify-content-start ">
        {{#if error}}
        <div class="alert alert-danger mt-1" role="alert">
            {{#each error}}
            <li>{{this}}</li>
            {{/each}}
        </div>
        {{/if}}
        {{#if message}}
        <div class="alert alert-success mt-1" role="alert">
            {{#each message}}
            <li>{{this}}</li>
            {{/each}}
        </div>
        {{/if}}

        <div class="mt-3 d-flex justify-content-start" id="backboard">
            {{#if tasks.length}}
            {{#each tasks}}
            <div class="me-3 mb-3">
                {{> backboardCard }}
                {{> backboardDetailsModal }}
            </div>

            {{/each}}
            {{/if}}
        </div>
    </div>
</div>